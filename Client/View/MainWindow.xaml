<Window x:Class="Client.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <DockPanel Grid.Row="0" Background="#2b5278" Height="50">
            <TextBlock Text="Чат" 
                       Foreground="White" FontSize="18" FontWeight="Bold"
                       VerticalAlignment="Center" Margin="15,0,0,0"/>
            <TextBlock x:Name="OnlineCounter"
                       Text="{Binding OnlineUsers}"
                       Foreground="LightGreen" FontSize="14" FontWeight="SemiBold"
                       VerticalAlignment="Center" Margin="10"
                       DockPanel.Dock="Right"/>
        </DockPanel>


        <ListBox x:Name="MessagesList" 
                 Grid.Row="1" Margin="10"
                 Background="White" BorderBrush="#d1d1d1" BorderThickness="1"
                 Padding="10"
                 FontSize="14">
            
        </ListBox>

        
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="MessageInputBox" Width="665" Height="40"
                     FontSize="14" Padding="8"
                     Text="{Binding MessageInput, UpdateSourceTrigger=PropertyChanged}"
                     Background="White" Foreground="Black"
                     BorderBrush="#2b5278" BorderThickness="2"
                     VerticalContentAlignment="Center"
                     Margin="0,0,10,0"/>
            <Button Width="120" Height="40"
                    Click="SendMessageClick"
                    Background="#2b5278" Foreground="White"
                    FontWeight="Bold" BorderThickness="0" 
                    Cursor="Hand" IsDefault="True">
                <Image Source="send.png" Width="Auto" Height="Auto"/>
            </Button>
        </StackPanel>
        
    </Grid>
</Window>
